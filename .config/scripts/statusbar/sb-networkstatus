#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BUTTON in
	1) alacritty -e nmtui; pkill -RTMIN+11 dwmblocks ;;
esac

case "$(cat /sys/class/net/wl*/operstate 2>/dev/null)" in
	down) wifiicon="ïª©" ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ïª¨ ", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac
ethernet=$(sed "s/down//;s/up/ï‚¬ /" /sys/class/net/e*/operstate 2>/dev/null)
vpn=$(sed 's/.*/ ï€£ /' /sys/class/net/tun*/operstate 2>/dev/null)
wireguard=$(sed 's/.*/ ï€£ /' /sys/class/net/wg*/operstate 2>/dev/null)
mullvad=$(sed 's/.*/ ï€£ /' /sys/class/net/mull*/operstate 2>/dev/null)
printf "%s%s%s%s%s\n" "$wifiicon" "$ethernet" "$vpn" "$wireguard" "$mullvad"
